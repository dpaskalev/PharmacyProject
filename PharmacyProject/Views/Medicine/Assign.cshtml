@model PharmacyProject.VewModels.AddMedicineToPharmacyViewModel

<h2>Add @Model.Name to a pharmacy</h2>

<form asp-action="Assign" method="post">
    <input type="hidden" asp-for="MedicineId" />
    <input type="hidden" asp-for="Name" />

    <h3>Select pharmacies:</h3>

    <div class="form-group">
        @for (int i = 0; i < Model.Pharmacies.Count; i++)
        {
            <div class="form-check">
                <input type="hidden" asp-for="@Model.Pharmacies[i].Id" />
                <input type="hidden" asp-for="@Model.Pharmacies[i].Name" />
                <input type="checkbox" asp-for="@Model.Pharmacies[i].IsSelected" class="form-check-input" />
                <label class="form-check-label">@Model.Pharmacies[i].Name</label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Confirm</button>

    <a asp-action="Index" class="btn btn-secondary mt-3">Mack to all medicines</a>
</form>